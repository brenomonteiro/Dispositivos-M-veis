<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/main_twitter_search_query_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:hint="@string/main_twitter_search_query_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/main_tag_your_query_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/main_tag_your_query_edittext"
        app:layout_constraintEnd_toStartOf="@+id/main_save_button"
        app:layout_constraintStart_toStartOf="@+id/main_twitter_search_query_edittext"
        app:layout_constraintTop_toBottomOf="@+id/main_twitter_search_query_edittext" />

    <Button
        android:id="@+id/main_save_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_save"
        app:layout_constraintEnd_toEndOf="@+id/main_twitter_search_query_edittext"
        app:layout_constraintTop_toBottomOf="@+id/main_twitter_search_query_edittext" />

    <TextView
        android:id="@+id/main_tagged_searchs_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/main_tagged_searchs_textview"
        android:textAllCaps="true"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_tag_your_query_edittext" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/main_twitter_search_query_edittext"
        app:layout_constraintStart_toStartOf="@+id/main_twitter_search_query_edittext"
        app:layout_constraintTop_toBottomOf="@+id/main_tagged_searchs_textview" />
</android.support.constraint.ConstraintLayout>